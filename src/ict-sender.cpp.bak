	    makeLog(LOG_ERR,"Sender control party is not connected!");
	    return false;
	}
	
	int sentLength=sendto(control.socket, data, datalen, 0, (struct sockaddr*)&control.peer, sizeof(control.peer));

	if (sentLength != strlen(data)) {
