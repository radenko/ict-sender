		makeLog(LOG_ERR,"ERR: Cannot send control!");
		sendto(listener.socket, (void*)buf, strlen(buf), 0,(struct sockaddr*)&listener.peer,sizeof(listener.peer));
		return false;
	}

	return true;
}

